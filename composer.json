{
  "name": "lemurro/api-core",
  "description": "PHP-ядро для Lemurro API",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Dmitrii Shcherbakov",
      "email": "info@bestion.ru",
      "homepage": "http://bestion.ru",
      "role": "Developer"
    }
  ],
  "scripts": {
    "phpcs80": "phpcs -nsp ./src --runtime-set testVersion 8.0 --standard=PHPCompatibility --standard=PSR1 --standard=PSR12 --runtime-set installed_paths ./vendor/phpcompatibility/php-compatibility/PHPCompatibility --report=xml --report-file=./phpcs-report.xml",
    "run-before-test": "php -S 127.0.0.1:8000 -t ../api/public",
    "test": [
      "codecept clean",
      "codecept run api"
    ]
  },
  "autoload": {
    "psr-4": {
      "Lemurro\\Api\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lemurro\\Api\\App\\": "stubs/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "require": {
    "doctrine/dbal": "3.3.*",
    "ext-json": "*",
    "ext-iconv": "*",
    "ext-pdo": "*",
    "ext-fileinfo": "*",
    "firebase/php-jwt": "6.3.*",
    "giggsey/libphonenumber-for-php": "8.13.*",
    "hellogerard/jobby": "3.5.*",
    "monolog/monolog": "2.8.*",
    "nesbot/carbon": "2.64.*",
    "php": "8.0.*",
    "phpmailer/phpmailer": "6.7.*",
    "pimple/pimple": "3.5.*",
    "symfony/http-foundation": "5.4.*",
    "symfony/http-kernel": "5.4.*",
    "symfony/routing": "5.4.*",
    "symfony/config": "5.4.*",
    "symfony/yaml": "5.4.*"
  },
  "require-dev": {
    "codeception/codeception": "5.0.*",
    "codeception/module-asserts": "3.0.*",
    "codeception/module-db": "3.1.*",
    "codeception/module-phpbrowser": "3.0.*",
    "codeception/module-rest": "3.3.*",
    "phpcompatibility/php-compatibility": "9.3.*"
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-intl-grapheme": "*",
    "symfony/polyfill-intl-idn": "*",
    "symfony/polyfill-intl-normalizer": "*",
    "symfony/polyfill-mbstring": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php73": "*"
  }
}
